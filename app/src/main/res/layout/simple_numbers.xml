<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:columnCount="4"
    android:rowCount="4"
    android:orientation="horizontal">

    <Button android:text="1"
        android:onClick="onClick1"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="2"
        android:onClick="onClick2"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="3"
        android:onClick="onClick3"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="-"
        android:onClick="onClickMinus"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="4"
        android:onClick="onClick4"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="5"
        android:onClick="onClick5"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="6"
        android:onClick="onClick6"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="7"
        android:onClick="onClick7"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="8"
        android:onClick="onClick8"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="9"
        android:onClick="onClick9"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="c"
        android:onClick="onClickCorrection"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="0"
        android:onClick="onClick0"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="="
        android:onClick="onClickEquals"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

</GridLayout>