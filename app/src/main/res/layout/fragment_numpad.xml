<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    app:columnCount="4"
    app:rowCount="4"
    app:orientation="horizontal">

    <Button android:text="@string/button7"
        android:id="@+id/button7"
        android:onClick="onClickNumpadButton"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button8"
        android:id="@+id/button8"
        android:onClick="onClickNumpadButton"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button9"
        android:id="@+id/button9"
        android:onClick="onClickNumpadButton"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button4"
        android:id="@+id/button4"
        android:onClick="onClickNumpadButton"
        app:layout_row="1"
        app:layout_column="0"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button5"
        android:id="@+id/button5"
        android:onClick="onClickNumpadButton"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button6"
        android:id="@+id/button6"
        android:onClick="onClickNumpadButton"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button_clear"
        android:id="@+id/button_clear"
        android:onClick="onClickNumpadButton"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button1"
        android:id="@+id/button1"
        android:onClick="onClickNumpadButton"
        app:layout_row="2"
        app:layout_column="0"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button2"
        android:id="@+id/button2"
        android:onClick="onClickNumpadButton"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button3"
        android:id="@+id/button3"
        android:onClick="onClickNumpadButton"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button_back"
        android:id="@+id/button_back"
        android:onClick="onClickNumpadButton"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button_minus"
        android:id="@+id/button_minus"
        android:onClick="onClickNumpadButton"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button0"
        android:id="@+id/button0"
        android:onClick="onClickNumpadButton"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

    <Button android:text="@string/button_equals"
        android:id="@+id/button_equals"
        android:onClick="onClickNumpadButton"
        app:layout_columnSpan="2"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/Widget.Holo.Button" />

</android.support.v7.widget.GridLayout>